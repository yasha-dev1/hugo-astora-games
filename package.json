{
  "name": "astora-games-hugo-theme",
  "version": "1.0.0",
  "description": "A retro arcade-style Hugo theme for game studios",
  "scripts": {
    "dev": "hugo server --disableFastRender",
    "build": "hugo --gc --minify",
    "css-dev": "postcss ./assets/css/main.css -o ./assets/css/style.css --watch",
    "css-build": "postcss ./assets/css/main.css -o ./assets/css/style.css --env production"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.17",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0"
  }
}
